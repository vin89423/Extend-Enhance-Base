<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Preference Style -->
    <!-- ================================ -->

    <style name="BasePreferenceTheme" parent="PreferenceThemeOverlay.v14.Material">
        <item name="numberPickerPreferenceStyle">
            @style/Preference.DialogPreference.NumberPickerPreference.Material
        </item>
        <item name="android:listPreferredItemPaddingLeft">16dp</item>
        <item name="android:listPreferredItemPaddingRight">16dp</item>
        <item name="android:listPreferredItemPaddingStart" tools:targetApi="17">16dp</item>
        <item name="android:listPreferredItemPaddingEnd" tools:targetApi="17">16dp</item>
    </style>

    <style name="Preference.DialogPreference.NumberPickerPreference.Material">
        <item name="android:layout">@layout/preference_material</item>
    </style>

    <style name="Preference_TextAppearanceMaterialBody2">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily" tools:targetApi="16">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
